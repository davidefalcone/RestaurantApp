<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reservationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reservationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Subtitle"
        app:layout_constraintStart_toStartOf="@+id/reservationName"
        app:layout_constraintTop_toBottomOf="@+id/reservationName" />

    <TextView
        android:id="@+id/reservationDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Subtitle"
        app:layout_constraintStart_toStartOf="@+id/reservationDate"
        app:layout_constraintTop_toBottomOf="@+id/reservationDate" />

    <TextView
        android:id="@+id/reservationNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Subtitle"
        app:layout_constraintStart_toStartOf="@+id/reservationDishes"
        app:layout_constraintTop_toBottomOf="@+id/reservationDishes" />
</androidx.constraintlayout.widget.ConstraintLayout>